﻿@{
    Layout = null;
}
@model Account
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/style_Login.css">
</head>
<body>
    <div class="login-container">
        <h1> Login </h1>
        <div class="logo"><img src="~/Image/Logo_web.png" alt="Alternate Text" /></div>
        <form method="POST" action="/Account/Login">
            <div class="form-group">
                <input type="text" id="username" asp-for="Username" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <input type="password" id="password" asp-for="Password" name="password" placeholder="Password" required>
            </div>
            <button type="submit">Login</button>
            <button type="button" onclick="window.location.href='/Post/Index';">Cancel</button>
            <a href="/Account/Register" class="register-link">No account yet? Register</a>
        </form>
    </div>
</body>
</html>






