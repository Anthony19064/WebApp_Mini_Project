﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp_Mini_Project</title>

    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    
    <header>
        <div class="nav-left" onclick="window.location.href='/Post/Index'" style="display: flex; align-items: center;">
            <svg width="70"
                 height="70"
                 viewBox="0 0 24 24"
                 fill="none"
                 xmlns="http://www.w3.org/2000/svg"
                 style="margin-right: 8px; animation: colorShift 3s ease-in-out infinite;">
                <path d="M15.4695 11.2929C15.0789 10.9024 14.4458 10.9024 14.0553 11.2929C13.6647 11.6834 13.6647 12.3166 14.0553 12.7071C14.4458 13.0976 15.0789 13.0976 15.4695 12.7071C15.86 12.3166 15.86 11.6834 15.4695 11.2929Z"
                      fill="currentColor" />
                <path d="M16.1766 9.17156C16.5671 8.78103 17.2003 8.78103 17.5908 9.17156C17.9813 9.56208 17.9813 10.1952 17.5908 10.5858C17.2003 10.9763 16.5671 10.9763 16.1766 10.5858C15.7861 10.1952 15.7861 9.56208 16.1766 9.17156Z"
                      fill="currentColor" />
                <path d="M19.7121 11.2929C19.3216 10.9024 18.6885 10.9024 18.2979 11.2929C17.9074 11.6834 17.9074 12.3166 18.2979 12.7071C18.6885 13.0976 19.3216 13.0976 19.7121 12.7071C20.1027 12.3166 20.1027 11.6834 19.7121 11.2929Z"
                      fill="currentColor" />
                <path d="M16.1766 13.4142C16.5671 13.0237 17.2003 13.0237 17.5908 13.4142C17.9813 13.8048 17.9813 14.4379 17.5908 14.8284C17.2003 15.219 16.5671 15.219 16.1766 14.8284C15.7861 14.4379 15.7861 13.8048 16.1766 13.4142Z"
                      fill="currentColor" />
                <path d="M6 13H4V11H6V9H8V11H10V13H8V15H6V13Z" fill="currentColor" />
                <path fill-rule="evenodd"
                      clip-rule="evenodd"
                      d="M7 5C3.13401 5 0 8.13401 0 12C0 15.866 3.13401 19 7 19H17C20.866 19 24 15.866 24 12C24 8.13401 20.866 5 17 5H7ZM17 7H7C4.23858 7 2 9.23858 2 12C2 14.7614 4.23858 17 7 17H17C19.7614 17 22 14.7614 22 12C22 9.23858 19.7614 7 17 7Z"
                      fill="currentColor" />
            </svg>
            <span>Play For Fun</span>
        </div>
        <div class="nav-right">
            <div class="floating-button" id="chatButton" onmouseover="changeIconColor('white')" onmouseout="changeIconColor('url(#gradient1)')" onclick="toggleChatPopup()">
                <svg id="chatIcon" width="30" height="30" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="0%">
                            <stop offset="0%" style="stop-color:#FF6699; stop-opacity:1" />
                            <stop offset="100%" style="stop-color:#f89b28; stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <path fill="url(#gradient1)" fill-rule="evenodd" clip-rule="evenodd"
                          d="M14 3V3.28988C16.8915 4.15043 19 6.82898 19 10V17H20V19H4V17H5V10C5 6.82898 7.10851 4.15043 10 3.28988V3C10 1.89543 10.8954 1 12 1C13.1046 1 14 1.89543 14 3ZM7 17H17V10C17 7.23858 14.7614 5 12 5C9.23858 5 7 7.23858 7 10V17ZM14 21V20H10V21C10 22.1046 10.8954 23 12 23C13.1046 23 14 22.1046 14 21Z" />
                </svg>
            </div>


            @if (ViewBag.Usersession != null)
            {
                <div class="dropdown">
                    <button class="dropbtn"><span>@ViewBag.Usersession</span></button>
                    <div class="dropdown-content">
                        <a href="/Account/Profile"><span>Profile</span></a>
                        <a href="/Account/Logout"><span>Logout</span></a>
                    </div>
                </div>

            }
            else
            {
                <div class="dropdown">
                <button class="dropbtn" onclick="window.location.href='/Account/Login'"><span>Login</span></button>
                </div>
            }
            
            <div class="chat-popup" id="chatPopup" style="display: none;">
                <div class="chat-popup-header">
                    แชทแจ้งเตือน
                    <span onclick="toggleChatPopup()" style="cursor: pointer; float: right;">×</span>
                </div>
                <div class="chat-popup-body" id="chatBody">
                    @* ข้อความแชท *@
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApp_Mini_Project -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
