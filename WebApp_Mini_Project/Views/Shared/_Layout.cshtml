<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp_Mini_Project</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp_Mini_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="nav-left" onclick="window.location.href='/Post/Index'">เพื่อไทย</div>
        <div class="floating-button" onclick="toggleChatPopup()">
            <svg class="bell-icon"
                 width="30"
                 height="30"
                 viewBox="0 0 24 24"
                 fill="none"
                 xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                      clip-rule="evenodd"
                      d="M14 3V3.28988C16.8915 4.15043 19 6.82898 19 10V17H20V19H4V17H5V10C5 6.82898 7.10851 4.15043 10 3.28988V3C10 1.89543 10.8954 1 12 1C13.1046 1 14 1.89543 14 3ZM7 17H17V10C17 7.23858 14.7614 5 12 5C9.23858 5 7 7.23858 7 10V17ZM14 21V20H10V21C10 22.1046 10.8954 23 12 23C13.1046 23 14 22.1046 14 21Z"
                      fill="currentColor" />
            </svg>
        </div>

    <div class="chat-popup" id="chatPopup">
        <div class="chat-popup-header">
            แชทแจ้งเตือน
        </div>
        <div class="chat-popup-body" id="chatBody">
            @* ข้อความแชท  *@
        </div>
    </div>
        <div class="nav-right">
            @if (ViewBag.Usersession != null)
            {
                <button class="login-button"}">
                    <a href="/Account/Profile" id="users">@ViewBag.Usersession</a>
                </button>
            }
            else
            {
                <button class="login-button" }"><a href="/Account/Login" id="users">Login </a></button>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApp_Mini_Project -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
